<a
  href="#top"
  class="scrollup"
  aria-hidden="true"
  aria-label="Scroll Up Button"
  tabindex="-1"
>
  <div
    class="h-10 w-10 rounded-lg text-black hover:text-[#220041] outline outline-2 outline-secondary flex justify-center items-center hover:bg-secondary lg:h-14 lg:w-14"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 20 20"
      fill="currentColor"
      class="h-6 w-6"
    >
      <path
        fill-rule="evenodd"
        d="M10 17a.75.75 0 0 1-.75-.75V5.612L5.29 9.77a.75.75 0 0 1-1.08-1.04l5.25-5.5a.75.75 0 0 1 1.08 0l5.25 5.5a.75.75 0 1 1-1.08 1.04l-3.96-4.158V16.25A.75.75 0 0 1 10 17Z"
        clip-rule="evenodd"></path>
    </svg>
  </div>
</a>
<style scoped>
  .scrollup {
    position: fixed;
    right: 2.5rem;
    bottom: -20%;
    background-color: var(--title-color);
    opacity: 0.8;
    padding: 0.3rem 0.5rem;
    border-radius: 0.4rem;
    transition: 0.4s;
  }

  .show-scroll {
    bottom: 3rem;
  }
</style>
<script>
  window.addEventListener("scroll", function () {
    const scrollUp = this.document.querySelector(".scrollup");
    if (this.scrollY >= 500) scrollUp.classList.add("show-scroll");
    else scrollUp.classList.remove("show-scroll");
  });
</script>
